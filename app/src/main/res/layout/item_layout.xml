<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/back">


    <androidx.cardview.widget.CardView
        android:id="@+id/item_layout_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_layout_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@color/black" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_layout_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:text="Kairat"
        android:layout_margin="20dp"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/item_layout_card"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/item_layout_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="709089032"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="@id/item_layout_tv_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_layout_tv_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>